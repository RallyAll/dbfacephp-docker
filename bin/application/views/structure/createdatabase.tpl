<section class="content-header"> <h1> Create new database <small>Control panel</small> </h1> <ol class="breadcrumb"> [{include file="inc/breadcrumbs.item.home.tpl"}] <li class="active">Create new database</li> </ol> </section> <section class="content"> <div class="row"> <section class="col-md-12"> <div class="box"> <div class="box-header"> <h3 class="box-title">Create a new database and binding to your account.</h3> </div> <form class="form-horizontal" id="form_createdb"> <div class="box-body"> <div class="form-group"> <label for="dbname" class="col-sm-2 control-label">Database Name:</label> <div class="col-sm-10"> <input name="dbname" id="dbname" type="text" class="form-control" value="[{$dbname}]" size="30"/> </div> </div> <div class="form-group"> <label for="collations" class="col-sm-2 control-label">Collation:</label> <div class="col-sm-10"> <select name="collations" class="form-control"> <option value="" selected></option> [{foreach key=charset item=collation from=$collations}] <optgroup label="[{$charset}]" title="[{$charset}]"> [{section name=j loop=$collation}] <option value="[{$collation[j]}]" title="[{$collation[j]}]" [{if $columns[k].field_collation}]== '[{$collation[j]}]'}]selected[{/if}]>[{$collation[j]}]</option> [{/section}] </optgroup> [{/foreach}] </select> </div> </div> </div> <div class="box-footer clearfix"> <button type="submit" class="btn btn-primary pull-right">Create database </button> </div> </form> </div> </section> </div> </section> <script>$(function(){$("#form_createdb").submit(function(a){a.preventDefault();$.post("?module=Createdatabase&action=create",$("#form_createdb").serialize(),function(b){if(b.status==0){$.scojs_message(b.message,$.scojs_message.TYPE_ERROR)}else{broadcast.propagateAjax("module=Structure&connid="+b.connid)}},"json")})});</script>